# CasperUSD Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env or .pem files to git!

# =============================================================================
# Network Configuration
# =============================================================================

# Network to deploy to: "testnet" or "mainnet"
CASPER_NETWORK=testnet

# Testnet RPC endpoint
CASPER_TESTNET_RPC=https://rpc.testnet.casperlabs.io/rpc

# Mainnet RPC endpoint  
CASPER_MAINNET_RPC=https://rpc.mainnet.casperlabs.io/rpc

# =============================================================================
# Wallet Configuration
# =============================================================================

# Path to your secret key .pem file (relative to project root)
# Generate at: https://cspr.live/tools/key-generator
CASPER_SECRET_KEY_PATH=./Account 1_secret_key.pem

# Your public account hash (without "account-hash-" prefix)
# Find at: https://testnet.cspr.live/account/YOUR_PUBLIC_KEY
CASPER_ACCOUNT_HASH=

# =============================================================================
# Contract Deployment
# =============================================================================

# Gas payment in motes (1 CSPR = 1,000,000,000 motes)
# Recommended: 100 CSPR for contract deployment
DEPLOY_GAS_PAYMENT=100000000000

# Chain name
CASPER_TESTNET_CHAIN=casper-test
CASPER_MAINNET_CHAIN=casper

# =============================================================================
# Deployed Contract Hashes (filled after deployment)
# =============================================================================

# After deploying, paste contract hashes here
VAULT_CONTRACT_HASH=
STABLECOIN_CONTRACT_HASH=
ORACLE_CONTRACT_HASH=
STABILITY_POOL_CONTRACT_HASH=

# =============================================================================
# Frontend Configuration
# =============================================================================

# API Keys
VITE_COINGECKO_API_KEY=
VITE_CHAINGPT_API_KEY=

# Default network for frontend
VITE_DEFAULT_NETWORK=testnet
